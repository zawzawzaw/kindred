{% schema %}
  {

    "name": "Returns Copy",
    "class": "about-page-copy-section-container",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "textarea",
        "id": "contentcopy",
        "label": "Content Copy"
      },
      {
        "type": "image_picker",
        "id": "content-image",
        "label": "Content Image"
      },
      {
        "type": "text",
        "id": "title2",
        "label": "Title 2"
      },
      {
        "type": "textarea",
        "id": "contentcopy2",
        "label": "Content Copy 2"
      },
      {
        "type": "image_picker",
        "id": "content-image-2",
        "label": "Content Image 2"
      }
    ]
  }
{% endschema %}