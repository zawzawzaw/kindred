<article id="about-page-copy-section" class="no-banner-version">
  <div class="container-fluid has-breakpoint">

    <div class="row">

      <div class="col-md-5">

        <div id="about-page-copy-copy">
          <div class="default-copy">
            <h1>{{ section.settings.title }}</h1>
            {{ section.settings.contentcopy }}
          </div>
        </div> <!-- about-page-copy-copy -->
        
      </div>
      <div class="col-md-1"></div>

      <div class="col-md-6 hidden-sm hidden-xs">

        <div id="about-page-copy-image">
          <div class="manic-image-container">
            <img src="" 
              data-image-desktop="{{ section.settings.content-image.src | img_url: 'master' }}">
          </div>
        </div> <!-- about-page-copy-image -->

      </div>
    </div> <!-- row -->

  </div>
</article>






