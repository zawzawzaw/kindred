  {% if blog.all_tags.size > 0 %}
    <div class="blog-page-sidebar-item" id="blog-page-sidebar-tags">
      <div class="blog-page-sidebar-item-title">
        <h4>Tags</h4>
      </div>
      <div class="blog-page-sidebar-item-content">
        <ul>
          {% for tag in blog.all_tags %}
            {% if current_tags contains tag %}
            <li>{{ tag }}</li>
            {% else %}
            <li>{{ tag | link_to_tag: tag }}</li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div> <!-- #blog-page-sidebar-tags -->

  {% endif %}



