  <div class="blog-page-sidebar-item" id="blog-page-sidebar-popular">
    <div class="blog-page-sidebar-item-title">
      <h4>Popular Post</h4>
    </div>
    <div class="blog-page-sidebar-item-content">

      {% for article in blogs[blog.handle].articles limit:3 %}

        <div class="sidebar-popular-post-item">
          <h3>{{ article.title }}</h3>
          <!-- <h5>January 5, 2017</h5> -->
          <h5>{{ article.published_at | date: format: 'month_day_year' }}</h5>
          <a href="{{ article.url }}" class="arrow-cta small-version">Learn more</a>
        </div>

      {% endfor %}
      
