<article id="home-page-shop-section">
  <div class="container-fluid has-breakpoint">
    <div class="row">
      <div class="col-md-12">

        <div id="home-page-shop-title">
          <h2>Shop our Kindred Teas Range</h2>
        </div>


        <div id="home-page-shop-item-container">

          {% comment %}
            Loop through products in your Frontpage collection.
          {% endcomment %}
          {% for product in collections.frontpage.products %}

            <a href="{{ product.url | within: collection }}" title="{{ product.title }}" class="home-page-shop-item">
              <div class="manic-image-container has-show-all">
                <img src="" data-image-desktop="{{ product.featured_image.src | img_url: 'master' }}">
              </div>
            </a>

          {% endfor %}

        </div> <!-- home-page-shop-item-container -->


      </div>
    </div>
  </div>
</article>

