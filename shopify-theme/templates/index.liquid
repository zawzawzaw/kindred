<article id="home-page-intro-section">
  <div class="container-fluid has-breakpoint">
    <div class="row">
      <div class="col-md-5">

        <div class="default-copy">

          {% if settings.home_page_intro_pretitle != blank %}
            <h4>{{ settings.home_page_intro_pretitle }}</h4>
          {% endif %}
          {% if settings.home_page_intro_title != blank %}
            <h1>{{ settings.home_page_intro_title }}</h1>
          {% endif %}
          {% if settings.home_page_intro_copy != blank %}
            <p>{{ settings.home_page_intro_copy }}</p>
          {% endif %}

          <div class="cta-container lower-version">
            <a href="javascript:void(0);" class="square-cta">Learn More</a>
          </div>
        </div>

      </div>
      <div class="col-md-7">

        <div class="manic-image-container">
          <img src="" data-image-desktop="{{ 'home-intro.jpg' | asset_url }}">

        </div>

      </div>
    </div>
  </div>
</article>


