<!-- /templates/collection.liquid -->
{% comment %}

  For more information on collection tags:
    - http://docs.shopify.com/themes/liquid-variables/collection

{% endcomment %}


{% if collection.image %}
  <article id="default-page-banner-section">
    <div id="default-page-banner">
      <div class="manic-image-container">
        <img src="" 
          data-image-desktop="{{ collection.image.src | collection_img_url: 'master' }}" 
          data-image-mobile="{{ collection.image.src | collection_img_url: 'x370' }}"
          data-image-tablet="{{ collection.image.src | collection_img_url: 'x560' }}"
          alt="{{ collection.image.alt }}">
      </div>
    </div>
  </article>

{% else %}

  <article id="default-page-banner-section">
    <div id="default-page-banner">
      <div class="manic-image-container">
        <img src="" 
          data-image-desktop="{{ 'collection-banner.jpg' | asset_url }}" 
          data-image-mobile="{{ 'collection-banner.jpg' | asset_img_url: 'x370' }}" 
          data-image-tablet="{{ 'collection-banner.jpg' | asset_img_url: 'x560' }}"
          alt="Collection Page Banner">
      </div>
    </div>
  </article>

{% endif %}




