<article id="blog-page-content-section">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-9">

        <div id="blog-page-content">

          <div id="blog-page-article-container">



            <article class="blog-page-article article-version">

              <div class="blog-page-article-title">
                <h1>{{ article.title }}</h1>
                <!-- <h4>january 5, 2017</h4> -->
                {% capture date %}<time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'month_day_year' }}</time>{% endcapture %}
                <h4>{{ date }}</h4>
              </div> <!-- blog-page-article-title -->

              <div class="blog-page-article-banner">
                <div class="manic-image-container">
                  <img src="" data-image-desktop="{{ article | img_url: 'master' }}">
                </div>
              </div> <!-- blog-page-article-banner -->

              <div class="blog-page-article-content">
                <div class="default-copy">


                  {{ article.content }}

                  {% comment %}
                    Create links to the next and previous articles, if available.
                  {% endcomment %}

                  {% if blog.next_article or blog.previous_article %}
                    
                    <div class="cta-container">
                      {% if blog.previous_article %}
                        <a href="{{ blog.previous_article }}" class="square-cta">{{ 'blogs.article.older_post' | t }}</a>
                      {% endif %}

                      {% if blog.next_article %}
                        <a href="{{ blog.next_article }}" class="square-cta">{{ 'blogs.article.newer_post' | t }}</a>
                      {% endif %}
                    </div> <!-- cta-container -->
                  {% endif %}


                </div>

              </div> <!-- blog-page-article-content -->

            </article> <!-- blog-page-article -->
            
          </div> <!-- blog-page-article-container -->

          

        </div> <!-- blog-page-content -->

      </div>
      <div class="col-md-3">



        {% include 'blog-sidebar' %}



      </div>
    </div>
  </div>

  

</article>
