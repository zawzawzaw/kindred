                      <div class="visible-sm visible-xs">
                        <div class="row">
                          <div class="col-xs-12">

                            <div class="product-detail">
                              <label>ingredients</label>
                            </div>

                          </div>
                        </div>

                        {% for mobile_multiple_ing_index in (0..1) %}

