                            <ul>
                              <li>{{ 'customer.addresses.edit' | t | edit_customer_address_link: address.id }}</li>
                              <li>{{ 'customer.addresses.delete' | t | delete_customer_address_link: address.id }}</li>
                            </ul>
                          </div>




