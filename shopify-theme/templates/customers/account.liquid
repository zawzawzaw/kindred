                                </div>

                              </div>
                            </div>


                            <div class="row">
                              <div class="col-md-6">
                                <div class="form-column-01">

                                  <div class="cta-container">
                                    <div class="row">
                                      <div class="col-md-6">
                                        <input type="submit" class="square-cta square-cta-01 full-width-version" value="{{ 'customer.addresses.update' | t }}">
                                      </div>
                                      <div class="col-md-6">
                                        <a href="#" class="square-cta square-cta-02 full-width-version" onclick="Shopify.CustomerAddress.toggleForm({{ form.id }}); return false;">{{ 'customer.addresses.cancel' | t }}</a>
                                      </div>
                                    </div>
                                  </div>

                                </div>
                              </div>
                            </div>

                        {% endform %}
                      </div> <!-- col-md-12 -->

                    </div> <!-- EditAddress_    -->

                  {% endfor %}
                  
                </div> <!-- row -->
              </div> <!-- account-information-details-content -->
            </div> <!-- account-information-details-container -->



          </div> <!-- col-md-10 -->
        </div> <!-- row -->
      </div>
    </article> <!-- page-account-information-section -->




