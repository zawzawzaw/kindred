<script>
  $(document).ready(function(e){
    $(".account-menu").on("click", function(e){
      e.preventDefault();      

      var href = $(this).attr('href');

      if(href) {

        $('.active').removeClass("active");
        $('.active-section').removeClass("active-section");

        $(this).addClass("active");
        $(href).addClass("active-section");
        
      }
    });
  });
</script>