                          </div>
                          <div class="col-md-7">
                            <div class="account-information-details-item">
                              <h4>Email</h4>
                              <p>{{ customer.email }}</p>
                            </div>
                          </div>

                        </div>
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-column-02">

                        <div class="account-information-details-item">
                          <h4>Password</h4>
                          <p><a href="/account/login#recover">Change Password</a></p>
                        </div>

                      </div>
                    </div>

                  </div> <!-- row -->

                  <div class="row">

                    <div class="col-md-6">
                      <div class="form-column-01">

                        <div class="row">


                          <div class="col-md-5">
                            <div class="account-information-details-item">
                              <h4>Phone Number</h4>
                              <p>{{ customer.default_address.phone }}</p>
                            </div>
                          </div>


                          {% if customer.default_address.country != "" %}

                            <div class="col-md-7">
                              <div class="account-information-details-item">
                                <h4>Country</h4>
                                <p>{{ customer.default_address.country }}</p>
                              </div>
                            </div>

                          {% endif %}

                        </div>

                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-column-02">

                        




                        {% if customer.default_address != nil %}
                        
                          <div class="account-information-details-item">
                            <h4>Address</h4>
                            <p>
                              {{ customer.default_address.address1 }}

                              {% if customer.default_address.address2 != "" %}
                                {{ customer.default_address.address2 }}<br>
                              {% endif %}

                              {% if customer.default_address.city != "" %}
                                {{ customer.default_address.city }}
                              {% endif %}

                              {% if customer.default_address.province_code != "" %}
                                {{ customer.default_address.province_code | upcase }}
                              {% endif %}

                              {% if customer.default_address.zip != "" %}
                                {{ customer.default_address.zip | upcase }}
                              {% endif %} 
                            </p>
                          </div>
                        
                        {% endif %}

