            <div class="account-information-details-container">
              <div class="account-information-details-title">
                <h3>{{ customer.name }}'s Account</h3>
              </div>
              <div class="account-information-details-content">

                <div class="visible-md visible-lg">
                  <div class="row">

                    <div class="col-md-6">
