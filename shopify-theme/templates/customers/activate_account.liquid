<!-- /templates/customers/activate_account.liquid -->
<article id="default-page-banner-section">
  <div id="default-page-banner">
    <div class="manic-image-container">
      <img src="" 
        data-image-desktop="{{ 'login-banner.jpg' | asset_url }}" 
        data-image-mobile="{{ 'login-banner.jpg' | asset_img_url: 'x370' }}" 
        data-image-tablet="{{ 'login-banner.jpg' | asset_img_url: 'x560' }}" 
        alt="">
    </div>
  </div>
</article>

<article id="page-activation-content-section">
  <div class="container-fluid has-breakpoint">
    <div class="row">
      <div class="col-md-6">
        <h1>{{ 'customer.activate_account.title' | t }}</h1>
        <p>{{ 'customer.activate_account.subtext' | t }}</p>

        {% comment %}
          This form must use 'activate_customer_password'
        {% endcomment %}
        
        {% form 'activate_customer_password' %}

          {{ form.errors | default_errors }}
          
          <div class="row">
            <div class="col-md-4">
              <label for="CustomerPassword">{{ 'customer.activate_account.password' | t }}</label>
            </div>
            <div class="col-md-8">
              <input type="password" value="" name="customer[password]" id="CustomerPassword" class="input-full" placeholder="{{ 'customer.activate_account.password' | t }}">
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <label for="CustomerPasswordConfirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
            </div>
            <div class="col-md-8">
              <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" class="input-full" placeholder="{{ 'customer.activate_account.password_confirm' | t }}">
            </div>
          </div>                        
          
          <div class="cta-container">
            <input type="submit" class="btn btn--full square-cta" value="{{ 'customer.activate_account.submit' | t }}">
            <input type="submit" class="btn--secondary btn--full square-cta" name="decline" value="{{ 'customer.activate_account.cancel' | t }}">
          </div>

        {% endform %}
        
      </div>
    </div>
  </div>
</article>